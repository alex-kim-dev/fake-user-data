{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.Intl"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "client",
    "paths": {
      "~/*": ["./*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true
  },
  "include": ["client"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
